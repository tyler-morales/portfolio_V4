html{scroll-behavior:smooth}*{margin:0;padding:0;box-sizing:border-box}ul,li{list-style-type:none}a{text-decoration:none;cursor:pointer}button{display:inline-block;background:0 0;outline:none;border:none}.btn{width:max-content;transition:all .3s;cursor:pointer;align-items:center;font-size:.8em;position:relative;display:flex}.hero--btn{margin-top:var(--space-lg);border-radius:50px;padding:var(--btn-padding);color:#fff;border:2px solid #e9e9e962}.hero--btn .arrow{padding:8px;border-radius:50px;border:2px solid #fff;transform:rotate(-45deg)scale(0.8);transform-origin:center;width:40px;position:absolute;transition:all .3s}.hero--btn .arrow-hover{transform:rotate(0deg)scale(1);border:2px solid #96b2cf;width:45px}@media(max-width:500px){.hero--btn .arrow-hover{width:40px}}.hero--btn .btn--text{padding:var(--space-xs);margin-left:45px;transition:all .3s}.hero--btn .btn-text-hover{transform:translateX(5px)}.voyage--btn{display:flex;align-items:center;padding:var(--space-sm)var(--space-lg);color:#fff;border:2px solid #e9e9e962;font-size:.8em;position:relative;border-radius:1px}.voyage--btn:hover{background-color:#fff;color:#000;cursor:pointer}.controls{left:-100px;top:99px;position:absolute;transition:all .3s;transform:scale(1)}.controls .arrow{padding:8px;border-radius:50px;border:2px solid #fff;transform-origin:center;width:40px;transition:all .3s}.controls .arrow:hover{cursor:pointer;transform:scale(1.2)}.controls--left{margin-bottom:20px;transform:rotate(180deg)}.controls--right{margin-bottom:20px}.trans{transition:all .3s;animation:fadeIn 1.2s cubic-bezier(0.22,1,0.36,1)}@keyframes fadeIn{from{opacity:0;transform:translateX(110px)}to{transform:translateX(0);opacity:1}}.fadeIn{transition:all .3s;animation:fade 1.2s cubic-bezier(0.22,1,0.36,1)}@keyframes fade{from{visibility:hidden}to{visibility:visible}}nav{display:flex;justify-content:space-between;padding-top:var(--space-md);margin:0 auto;max-width:80vw;color:#fff;position:sticky}.nav-links{display:flex;margin:0 -10px}.nav-links li>*{margin:0 10px}.hero{display:flex;flex-flow:column;align-items:center}
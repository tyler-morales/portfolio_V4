:root{--color-tertiary: #66BB6A;--color-bg: #F5F5F7;--color-link: #1976D2;--color-gray:#6C6C6C}html{scroll-behavior:smooth}.u-mt{margin-top:50px}*{margin:0;padding:0;box-sizing:border-box}ul,li{list-style-type:none}a{text-decoration:none;cursor:pointer}button{display:inline-block;background:0 0;outline:none;border:none}p:not(:last-child){margin-bottom:20px}h1,h2,h3,h4,h5,h6,span,footer,p,ol,li{font-family:roboto,sans-serif}h1{font-size:72px;font-weight:500}h2{font-size:56px;line-height:56px;font-weight:500;margin-bottom:15px}h3{font-size:36px;font-weight:500}h4{font-size:24px;line-height:28px;font-weight:500}h5{font-size:17px;font-weight:400}h6{font-size:12px;font-weight:400}p{font-size:21px;font-weight:400;line-height:39px}ol,ul{line-height:39px}li{font-size:21px}.project-type{color:var(--color-tertiary);font-size:14px}.link,.link--view-project{cursor:pointer;width:max-content}.link--view-project{color:var(--color-link);font-size:17px}.icon,.icon--social{cursor:pointer;display:block;fill:#000}.icon--social{height:48px;width:48px}.external-link-icon{position:absolute;top:14px;right:35px;top:17px;right:17px;fill:#8bc34a;width:24px;height:24px;cursor:pointer;transition:all .3s}.external-link-icon:hover{fill:blue}footer{text-align:center}nav{display:flex;justify-content:space-between;padding-top:var(--space-md);margin:0 auto;max-width:80vw;color:#fff;position:sticky}.nav-links{display:flex;margin:0 -10px}.nav-links li>*{margin:0 10px}body{background-color:var(--color-bg)}.container{display:grid;gap:100px}.hero{display:flex;flex-direction:column;align-items:center;justify-content:center}.hero--img{margin-top:40px}.case-studies{display:grid;gap:200px;background-color:#fff;padding:100px 0}.case-studies--title{text-align:center}.case-studies .case-study{display:flex;justify-content:center;align-items:center}.case-studies .case-study__text{max-width:400px;display:grid;gap:15px}.case-studies .case-study__text__tags{display:flex;color:var(--color-gray)}.case-studies .case-study__text__tags--tag:not(:last-child){margin-right:15px}img{max-width:100%;height:auto}.reverse{flex-direction:row-reverse}.img-md{max-width:420px;height:auto}.notable-projects{display:grid;justify-content:center;background-color:#fff;margin:100px;padding:100px;text-align:center}.notable-projects__grid{margin-top:100px;display:grid;gap:60px;grid-template-columns:repeat(3,1fr)}.notable-projects__grid__project__image{position:relative}.notable-projects__grid__project--title{margin-top:10px}.box{height:200px;width:200px;background-color:red}.facts{display:grid;gap:100px;grid-template-columns:repeat(auto-fill,minmax(300px,1fr));margin:0 auto;width:1100px;margin:0 auto}.facts__fact{display:flex;flex-direction:column;align-items:center;text-align:center}.facts__fact *:not(:last-child){margin-bottom:10px}.facts__fact--icon{width:50px;height:auto}.facts__fact__tags{display:flex;flex-wrap:wrap;color:var(--color-gray);margin-top:10px}.facts__fact__tags--tag:not(:last-child){margin-right:15px}.about--title{text-align:center}.about__grid{columns:2 auto;column-gap:1rem;margin:100px}.about__grid>*{background-color:#fff;padding:44px;display:inline-block;margin:30px}.about__grid__img{text-align:center}.about__grid__skills{text-align:center}.about__grid__skills__list{display:flex;flex-wrap:wrap;justify-content:center;margin-top:25px}.about__grid__skills__list>*:not(:last-child){margin-right:20px}.about__grid__socials{width:100%;text-align:center}.about__grid__socials__icons{display:flex;justify-content:space-around}.about__grid__socials__icons :hover>*{fill:red;transition:all .3s}